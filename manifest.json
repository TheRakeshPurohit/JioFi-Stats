{
  "name": "JioFi Status Updater",
  "version": "0.1",
  "description": "Gets stats from JioFi",
  "manifest_version": 2,
  "icons": {
    "128": "icons/logo.png"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "js/background_script.js"
    ]
  },
  "permissions": [
    "http://192.168.1.1/",
    "storage",
    "notifications"
  ],
  "browser_action": {
    "default_icon": "icons/logo.png",
    "default_popup": "html/popup.html"
  }
}